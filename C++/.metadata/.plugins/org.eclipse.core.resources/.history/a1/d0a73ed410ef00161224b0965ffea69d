#include <iostream>
#include <vector>
#include <cstdlib>
#include <fstream>
using namespace std;

int main()
{
	ifstream fileIn;
	string fileName;
	cout << "Enter file name." << endl;
	cin >> fileName;
	fileIn.open(fileName);
	if(fileIn.fail())
	{
		cout << "Error on opening file" << endl;
	}
	int eatNum;
	int v1,v2;
	fileIn >> eatNum;
	int numberVertices = eatNum;
	fileIn >> eatNum;
	int numberEdges = eatNum;
	int ara[numberVertices][numberVertices];
	cout << numberVertices << endl;
	cout << numberEdges << endl;
	for(int i = 0 ; i < numberVertices;i++)
	{
		for(int j = 0; j < numberVertices;j++)
		{
			ara[i][j] = 0;
		}
	}
	while ( fileIn >> v1 >> v2)
	{
		ara[v1][v2] = 1;
	}
	for(int i = 0 ; i < numberVertices;i++)
	{
		for(int j = 0; j < numberVertices;j++)
		{
			cout << ara[i][j] << " ";
		}
		cout << endl;
	}
	return EXIT_SUCCESS;
}
