#include<iostream>
#include<cstdlib>
#include<cmath>
using namespace std;

void grow(int*& L,int& size);

int* sieve(int n,int&size);
int main()
{
	int n;
	int* final;
	int count;
	cout << "Please enter the number to get all its primes" << endl;
	cin >> n;
	final = sieve(n,count);
	for(int i = 0 ; i< count;i++)
		cout <<final[i] << " ";
	return EXIT_SUCCESS;
}
int* sieve(int n,int&count)
{
	int A[n];
	int*L ;
	int j = 0;
	for(int p = 2; p < n;p++)
		A[p] = p;
	for(int p = 2; p < floor(sqrt(n));p++)
	{
		if(A[p] != 0)
			j = p*p;
			while(j<=n)
			{
				A[j] = 0;
				j = j+p;
			}
	}
	int i = 0;

	for(int p = 2; p < n;p++)
	{
		if(A[p] != 0)
		{
			grow(L, &count);
			L[i] = p;
			i +=1;
		}
	}
	return L;
}
void grow(int*& L,int& size)
{
	size++;
	int *n = new int[size+1];
	copy(L,L+size-1,n);
	if(size>1)
		delete[]L;
	L = n;
}


