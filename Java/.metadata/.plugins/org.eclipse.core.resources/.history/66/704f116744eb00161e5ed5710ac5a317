
public class ATM {

	private int bankBalance;
	private String bankLocation;
	private String bankName;
	private int serialNumber;
	//Constructor
	ATM()
	{
		bankBalance = 100;
		serialNumber = 0;
		bankLocation = "UNKNOWN";
		bankName = "UNKNOWN";
	}
	//Overloaded Constructor
	ATM(int serialNum,String name, String location)
	{
		serialNumber = serialNum;
		bankName = name;
		bankLocation = location;
	}
	//Getters
	int getBankBalance()
	{
		return bankBalance;
	}
	String getBankLocation()
	{
		return bankLocation;
	}
	String getBankName()
	{
		return bankName;
	}
	//Methods
	void setATM(int serialNum,String location)
	{
		serialNumber = serialNum;
		bankLocation = location;
		
	}
	void addFund(int amount)
	{
		bankBalance += amount;
	}
	void displayMenu()
	{
		System.out.println("===== ATM Transaction Menu =====");
		System.out.println("1. Withdrawl");
		System.out.println("2. Deposit");
		System.out.println("3. Transfer");
	}
	//Overloaded Output
	@Override
	public String toString()
	{
		return "Serial Number: " + serialNumber+"\n"+"Bank Name: " + bankName +"\n"+
				"Location: " + bankLocation + "\n" + "Balance: " + bankBalance + "\n";
	}
	//Class to hold user information
	class PATRON{
		String patronName;
		int pinNumber;
		int patronFunds;
		//Constructor
		PATRON()
		{
			patronName = null;
			pinNumber = 0;
			patronFunds = 0;
		}
		PATRON(String name, int pin, int funds)
		{
			patronName = name;
			pinNumber = pin;
			patronFunds = funds;
		}

	}
	public static void main(String[] args) {
		PATRON users = new PATRON[10];
	}

}
