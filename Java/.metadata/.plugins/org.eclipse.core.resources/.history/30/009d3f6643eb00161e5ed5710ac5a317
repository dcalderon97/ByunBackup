
public class ATM {
	public class PATRON{
		String name;
		int pinNumber;
		int funds;
		//Constructor
		PATRON()
		{
			name = null;
			pinNumber = 0;
			funds = null
		}
	}
	private int bankBalance;
	private String bankLocation;
	private String bankName;
	private int serialNumber;
	//Constructor
	ATM()
	{
		bankBalance = 100;
		serialNumber = 0;
		bankLocation = "UNKNOWN";
		bankName = "UNKNOWN";
	}
	//Overloaded Constructor
	ATM(int serialNum,String name, String location)
	{
		serialNumber = serialNum;
		bankName = name;
		bankLocation = location;
	}
	//Getters
	int getBankBalance()
	{
		return bankBalance;
	}
	String getBankLocation()
	{
		return bankLocation;
	}
	String getBankName()
	{
		return bankName;
	}
	//Methods
	void setATM(int serialNum,String location)
	{
		serialNumber = serialNum;
		bankLocation = location;
		
	}
	void addFund(int amount)
	{
		bankBalance += amount;
	}
	void displayMenu()
	{
		System.out.println("===== ATM Transaction Menu =====");
		System.out.println("1. Withdrawl");
		System.out.println("2. Deposit");
		System.out.println("3. Transfer");
	}
	//Overloaded Output
	@Override
	public String toString()
	{
		return "Serial Number: " + serialNumber+"\n"+"Bank Name: " + bankName +"\n"+
				"Location: " + bankLocation + "\n" + "Balance: " + bankBalance + "\n";
	}
	
	public static void main(String[] args) {

	}

}
